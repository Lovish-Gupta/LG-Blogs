<%- include("partials/header") %>
<h1>Compose</h1>

<form action="/compose" method="post" style="padding-top: 10px;">
    
  <label>Title</label>
    
  <input type="text" class="form-control" name="postTitle" value="<%= editTitle %>" required>
  <input type="hidden" class="form-control" name="prevTitle" value="<%= editTitle %>">
    
  <div class="form-group" style="padding-top: 10px;">
    <div class="container">
    <div class="row">
      <label>Description</label>
      <span style="float: right; margin-right: 30px; color: #777;">0 characters</span>
  </div>
</div>
    <textarea class="form-control" rows="5" name="postBody" onkeyup="$('span').text(this.selectionStart + '/' + this.value.length + ' characters');" required><%= editBody %></textarea>
  </div>
  
  <div class="form-group">
    <label>Code</label>
    <textarea class="form-control" rows="5" name="code"><%- editCode %></textarea>
  </div>
  
  <button type="submit" class="btn btn-primary" name="submit" value="<%= Publish %>"><%= Publish %></button>

</form>
<%- include("partials/footer") %> 